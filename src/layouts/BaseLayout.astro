---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import "@styles/main.css";
const {
    title = "QReate: QR Code Editor",
    description = "The ultimate app for creating highly customizable QR codes to share your best work with the world. Choose from a variety of templates and export your QR codes in high resolution to your preferred format.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <meta property="og:image" content="/og-image.jpeg" />
        <meta property="og:type" content="app, website" />
        <meta property="og:site_name" content="QReate: QR Code Editor" />
        <meta property="og:url" content="https://getqreate.app" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />

        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:site" content="@polpielladev" />
        <meta name="twitter:creator" content="@polpielladev" />
        <meta name="twitter:image" content="/og-image.jpeg" />

        <meta name="description" content={description} />
        <meta name="apple-itunes-app" content="app-id=6446048195" />
        <link rel="icon" href="/favicon.ico" type="image/x-icon" />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <title>{title}</title>
    </head>
    <body
        class="flex flex-col mx-auto max-w-[1000px] rounded-font min-h-screen py-8 md:px-6 px-2 font-satoshi"
    >
        <Header />
        <main class="container mx-auto px-4 mt-16 mb-16">
            <slot />
        </main>
        <Footer />
        <script
            is:inline
            src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"
        ></script>
    </body>
</html>
